<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="600dp"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:background="@drawable/code_view_layout">


    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/completed"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="60dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/star1"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/star_gray"
            android:layout_marginHorizontal="16dp"
            />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/star_gray"
            android:layout_marginHorizontal="16dp"
            />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/star_gray"
            android:layout_marginHorizontal="16dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/replayButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_enable"
            android:text="@string/retry"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:drawableTop="@drawable/ic_baseline_replay_48"
            android:drawablePadding="-12dp"/>

        <Button
            android:id="@+id/nextLevelButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_enable"
            android:text="@string/next_level"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:drawableTop="@drawable/ic_baseline_play_arrow_48"
            android:drawablePadding="-12dp"/>

        <Button
            android:id="@+id/homeButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_enable"
            android:text="@string/home"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:drawableTop="@drawable/ic_baseline_home_48"
            android:drawablePadding="-12dp"/>

    </LinearLayout>

</LinearLayout>